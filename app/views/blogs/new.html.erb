<% if user_signed_in? %>
  <main class="blogsPage">
    <section class="newblog">
      <div class="newblogleft">
        <%= image_tag("blogs/createnewblog.jpg", alt: "The create a new blog image") %>
        <h2 class="darkgreentext">My Kuku's new blog</h2>
      </div>

      <div class="newblogright">
        <%= form_with(model: @blog) do |form| %>
          <% if @blog.errors.any? %>
            <div style="color: red">
              <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

              <ul>
                <% @blog.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="blogform">
            <%= form.label :blog_image, style: "display: block" %>
            <%= form.file_field :blog_image %>
          </div>

          <div class="blogform">
            <%= form.label :blog_title, style: "display: block" %>
            <%= form.text_field :blog_title, placeholder: "A good title is ideally around 6 words long." %>
          </div>

          <div class="blogform">
            <%= form.label :date_created, style: "display: block" %>
            <%= form.date_field :date_created %>
          </div>

          <div class="blogform">
            <%= form.label :blog_text, style: "display: block" %>
            <%= form.text_area :blog_text, placeholder: "Jot your ideas here. Words length not restricted." %>
          </div>

          <div>
            <%= form.number_field :comments_counter, type: :hidden %>
          </div>

          <div>
            <%= form.number_field :user_id, id: :blog_user_id, value: current_user.id, type: :hidden %>
          </div>

          <div class="blogSubmit">
            <%= form.submit %>
          </div>
        <% end %>
      </div>
    </section>
  </main>

<% else %>

  <main class="blogsPage">
    <p>Kindly login to create a blog</p>
  </main>

<% end %>



